{
  "name": "@matterlabs/hardhat-zksync-chai-matchers",
  "version": "0.1.0",
  "description": "Hardhat plugin to  to test Smart Contracts easily in the zkSync ecosystem",
  "repository": "github:matter-labs/hardhat-zksync",
  "homepage": "https://github.com/matter-labs/hardhat-zksync/tree/main/packages/hardhat-zksync-chai-matchers",
  "author": "Matter Labs",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "zkSync"
  ],
  "scripts": {
    "lint": "yarn prettier --check && yarn eslint",
    "lint:fix": "yarn eslint --fix",
    "fmt": "yarn prettier --write",
    "eslint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "test": "mocha --recursive \"test/**/*.ts\" --exit",
    "build": "tsc --build .",
    "clean": "rimraf dist"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "parser": "typescript",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "bignumber.js": "^9.1.0",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.2",
    "mocha": "^10.1.0",
    "zksync-web3": "^0.11.1"
  },
  "dependencies": {
    "@matterlabs/hardhat-zksync-deploy": "link:../hardhat-zksync-deploy",
    "@matterlabs/hardhat-zksync-solc": "^0.3.11-beta.1"
  }
}
